<h1>Settings</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

	<div class="form-group">
  		<div>
    		<%= f.label :addition %>
    		<%= f.select :addition, [['True', true], ['False', false]] %>
  	</div>

  	<%= f.submit "Update" %>

<% end %>